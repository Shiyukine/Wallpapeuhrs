<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" xmlns:XamlHost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
    x:Class="Wallpapeuhrs.MediaVW" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">

    <Grid>
        <XamlHost:WindowsXamlHost x:Name="myHostControl" SnapsToDevicePixels="True" ClipToBounds="True" IsManipulationEnabled="True" Visibility="Collapsed"/>
        <wpf:WebView2 x:Name="webview" Visibility="Collapsed"></wpf:WebView2>
    </Grid>
</UserControl>
